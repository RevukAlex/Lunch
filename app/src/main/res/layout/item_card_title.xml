<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:weightSum="1"


    android:gravity="center"
    android:id="@+id/rootView"
    android:clickable="true">

      <android.support.v7.widget.CardView
          android:id="@+id/card_view"
          android:layout_width="180dp"
          android:layout_height="240dp"

          card_view:cardUseCompatPadding="true"
          card_view:cardCornerRadius="8dp"
          android:layout_margin="3dp">

         <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="match_parent">

              <ImageView
                  android:id="@+id/item_image_dish"
                  android:layout_width="180dp"
                  android:layout_height="180dp"
                  android:contentDescription="@string/action_settings"
                  android:src="@drawable/newyork"
                  android:scaleType="centerCrop"
                  android:layout_alignParentEnd="false"
                  android:layout_centerHorizontal="true" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceLarge"
                 android:text="Large Text"
                 android:id="@+id/item_nameDish"
                 android:layout_below="@+id/item_image_dish"
                 android:layout_alignStart="@+id/item_image_dish" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:text="Small Text"
                 android:id="@+id/item_description"
                 android:layout_below="@+id/item_nameDish"
                 android:layout_alignParentStart="true"
                 android:layout_alignParentBottom="true"
                 android:layout_alignParentEnd="true" />

             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textAppearance="?android:attr/textAppearanceSmall"
                 android:text="400"
                 android:id="@+id/item_weight"
                 android:layout_above="@+id/item_description"
                 android:layout_alignParentEnd="true" />

             <ImageView
                 android:layout_width="100dp"
                 android:layout_height="100dp"
                 android:id="@+id/check"
                 android:layout_alignParentTop="true"
                 android:layout_alignEnd="@+id/item_weight"
                 android:src="@drawable/symbol_check" />

         </RelativeLayout>

     </android.support.v7.widget.CardView>

</LinearLayout>

